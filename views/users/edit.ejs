<% layout('layout/boilerplate.ejs') %>

<% if (!currentUser){%>
    <script>
        window.location.href='/login'
    </script>
<%} else {%>
    <div class="row justify-content-center">
        <h1 class="text-center">Edit Profile</h1>
        <div class="col-md-6 mt-3">
            <form action="/<%= currentUser._id %>?_method=PUT" method="POST" novalidate
                class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" name="currentUser[username]" id="username"
                        value="<%= currentUser.username %>" required>
                    <div class="valid-feedback">
                        looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">Email</label>
                    <input class="form-control" type="text" name="currentUser[email]" id="email"
                        value="<%= currentUser.email %>" required>
                    <div class="valid-feedback">
                        looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="about">About</label>
                    <textarea class="form-control" type="text" name="currentUser[about]" rows="5" id="about" style=" max-height: 10em;"><%= currentUser.about %></textarea>
                    <div class="valid-feedback">
                        looks good!
                    </div>
                </div>
                <div class="Sign-up mt-2">
                    <p>
                        <a href="/changepass">Change Password </a>
                    </p>
                </div>
        </div>

        </div>
        <div class="mb-3 d-flex justify-content-center">
            <button class="btn btn-dark" disabled>Edit Profile(coming soon)</button>
        </div>
        </form>
    </div>
<%}%>